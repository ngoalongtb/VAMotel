@model IEnumerable<Model.EF.BaiViet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminMaster.cshtml";
}

<section class="content container-fluid">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Danh sách bài viết</h3>
            <h3>@Html.ActionLink("Tạo mới", "Create")</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DanhMuc.ten)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tieu_de)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.hinh_anh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ngay_tao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dia_chi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.dien_tich)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.gia_ca)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.do_uu_tien)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DanhMuc.ten)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tieu_de)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.hinh_anh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ngay_tao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dia_chi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.dien_tich)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.gia_ca)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.do_uu_tien)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ma }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ma }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ma })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@section script{
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
}